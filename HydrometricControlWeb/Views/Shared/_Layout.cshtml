@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Material Design Icons v.1.1.34 ~> https://cdn.materialdesignicons.com/1.1.34/ -->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SistemaHidro</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>

<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" asp-controller="Home" asp-action="Index">
                    <small class="text-dark">HydrometricControlWeb</small>
                </a>
                <a class="navbar-brand brand-logo-mini" asp-controller="Home" asp-action="Index">
                    <small class="text-dark">HydrometricControlWeb</small>
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item dropdown d-none d-xl-inline-block">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        @*https://cdn.materialdesignicons.com/2.1.19/*@
        <div class="container-fluid page-body-wrapper">
            @if (SignInManager.IsSignedIn(User))
            {
                <!-- partial:partials/_sidebar.html -->
                <nav class="sidebar sidebar-offcanvas" id="sidebar">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="menu-icon mdi mdi-television"></i>
                                <span class="menu-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-habitacao" aria-expanded="false" aria-controls="ui-habitacao">
                                <i class="menu-icon mdi mdi-home-variant"></i>
                                <span class="menu-title">Habitação</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-habitacao">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Condominio" asp-action="Index">Condomínio</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Unidade" asp-action="Index">Unidade</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-afericao" aria-expanded="false" aria-controls="ui-afericao">
                                <i class="menu-icon mdi mdi-barcode-scan"></i>
                                <span class="menu-title">Aferição</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-afericao">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Leitura" asp-action="Index">Leitura</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-referencia" aria-expanded="false" aria-controls="ui-referencia">
                                <i class="menu-icon mdi mdi-ticket-percent"></i>
                                <span class="menu-title">Referência</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-referencia">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Faixa" asp-action="Index">Faixa</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Imposto" asp-action="Index">Imposto</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Consumo" asp-action="Index">Consumo</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-relatorio" aria-expanded="false" aria-controls="ui-relatorio">
                                <i class="menu-icon mdi mdi-receipt"></i>
                                <span class="menu-title">Relatório</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-relatorio">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Conta" asp-action="Index">Conta</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                       
                    </ul>
                </nav>
                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="row">
                            @RenderBody()
                        </div>
                    </div>
                    <!-- content-wrapper ends -->
                    <!-- partial:partials/_footer.html -->
                    <footer class="footer">
                        <div class="container-fluid clearfix">
                            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                                Copyright © @DateTime.Now.Year
                                <a href="http://www.bootstrapdash.com/" target="_blank">Railson Ramés <i class="mdi mdi-glasses"></i></a> All rights reserved.
                            </span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                                Hand-crafted & made with
                                <i class="mdi mdi-heart text-danger"></i>
                            </span>
                        </div>
                    </footer>
                    <!-- partial -->
                </div>
            }
            else
            {
                <div class="container-fluid">
                    <div class="content-wrapper">
                        <div class="row justify-content-center" style="padding-bottom: 290px">
                            @RenderBody()
                        </div>
                    </div>
                    <!-- content-wrapper ends -->
                    <!-- partial:partials/_footer.html -->
                    <footer class="footer">
                        <div class="container-fluid clearfix">
                            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                                Copyright © @DateTime.Now.Year
                                <a href="http://www.bootstrapdash.com/" target="_blank">Railson Ramés <i class="mdi mdi-glasses"></i></a> All rights reserved.
                            </span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                                Hand-crafted & made with
                                <i class="mdi mdi-heart text-danger"></i>
                            </span>
                        </div>
                    </footer>
                </div>
            }
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/assets/js/dashboard.js"></script>
    <!-- End custom js for this page-->
    @RenderSection("scripts", required: false)
</body>
</html>